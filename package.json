{
  "name": "@crazyfactory/frontend-commons",
  "private": false,
  "description": "common frontend stuff",
  "main": "index.ts",
  "scripts": {
    "clean": "rimraf build && rimraf .jest/cache",
    "prebuild": "npm run clean -s",
    "build": "tsc",
    "postbuild": "npm run copy-dts",
    "lint": "eslint \"src/**/**.ts*\"",
    "test": "jest",
    "copy-dts": "copyfiles -u 1 \"src/**/*.d.ts\" build"
  },
  "author": "dev@crazy-factory.com",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@crazyfactory/tslint-rules": "^1.6.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.8",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/eslint-plugin-tslint": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "copyfiles": "^2.1.1",
    "eslint": "^6.4.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.6.3",
    "typestyle": "^2.0.4"
  },
  "peerDependencies": {
    "typestyle": "^2.0.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "cacheDirectory": "<rootDir>/.jest/cache",
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "moduleDirectories": [
      "node_modules",
      "./"
    ],
    "setupFilesAfterEnv": [
      "./jest/bootstrap.ts"
    ]
  },
  "types": "./types.d.ts"
}
